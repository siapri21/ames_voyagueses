{# templates/home/weather_widget.html.twig #}

<div class="flex justify-center items-center min-h-screen">
    <div class="container relative w-80 bg-white bg-opacity-80 border border-gray-300 rounded-lg p-5 shadow-lg">
        {# Boîte de recherche #}
        <div class="search-box relative w-full flex items-center mb-4">
            <i class="bx bxs-map absolute left-3 text-2xl text-gray-700"></i>
            <input type="text" placeholder="Enter your location" class="w-full py-2 pl-10 pr-4 border-2 border-gray-300 rounded-lg text-gray-700 placeholder-gray-400 focus:outline-none focus:border-blue-500">
            <button class="bx bx-search absolute right-3 text-2xl text-gray-700 hover:text-gray-900 transition-colors"></button>
        </div>

        {# Boîte météo #}
        <div class="weather-box hidden text-center mt-4">
            <div class="w-20 h-20 mx-auto mb-2 bg-gray-100 rounded-full flex items-center justify-center">
                <i class="bx bx-cloud text-4xl text-gray-700"></i>
            </div>
            <p class="temperature text-5xl font-bold mb-1">16<span class="text-2xl align-top ml-1">°C</span></p>
            <p class="description text-lg font-medium capitalize text-gray-700">Broken Clouds</p>
        </div>

        {# Détails météo #}
        <div class="weather-details hidden mt-4 flex justify-between">
            <div class="humidity flex items-center">
                <i class="bx bx-water text-3xl mr-2 text-gray-700"></i>
                <div>
                    <span class="text-2xl font-medium">0%</span>
                    <p class="text-sm text-gray-500">Humidity</p>
                </div>
            </div>
            <div class="wind flex items-center">
                <i class="bx bx-wind text-3xl mr-2 text-gray-700"></i>
                <div>
                    <span class="text-2xl font-medium">0 Km/h</span>
                    <p class="text-sm text-gray-500">Wind Speed</p>
                </div>
            </div>
        </div>

        {# Message d'erreur #}
        <div class="not-found hidden text-center mt-4">
            <i class="bx bx-error-circle text-6xl mb-2 text-red-500"></i>
            <p class="text-lg font-medium text-gray-700">Oops! Location not found!</p>
        </div>
    </div>
</div>


<script src="{{ asset('js/weather.js') }}"></script>